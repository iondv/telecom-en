<%
let result = {
  title: item.get('name'),
  index: item.get('postIndex'),
  opsType: item.property('gops').getDisplayValue(),
  opsTowns: '',
  address: item.get('adress'),
  phone: item.get('tel')
}

let coll = item.property('naselenniyPunkt').evaluate();
if (coll && coll.length) {
  for (let elem of coll) {
    result.opsTowns += ' ' + elem.property('okato').evaluate();
  }
} else {
  result.opsTowns = 'no';
}

%>

<ul class='balloon-attrlist' style='width:225px'>

  <li><%- result.title %> <%- result.index %>. Тип: <%- result.opsType %>. Address: <%- result.address %> PO phone number: <%- result.phone %> Serviced localities: <%- result.opsTowns %></li>

</ul><div><button type='button' class='btn btn-sm btn-primary map-modal-link' data-type='url' data-url='geomap/render/telecom-en/ops/0/<%- item.id %>?template=geo/layers/ops'>Подробно</button></div>